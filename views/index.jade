doctype html
html
  head
    block titleContent
      title Welcome to PostuhPoll
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', media='screen')
      link(rel='stylesheet', href='/public/css/main.css')
      script(src='//code.jquery.com/jquery.js')
      script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/react/15.2.1/react.min.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/react/15.2.1/react-dom.js')
      script(src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js")
      script(type='text/babel' src='/public/main.js')
  
    
  body
    div#top-menu 
      a(href='/') Home
      a(href='/register') Register
      a(href='/login') Login
    block bodyContent
      div.container 
        div#top-banner 
          h1 Welcome to 
          h1(style="font-family:impact; color:#4E8191") PostuhPoll
        div#addPoll POST A POLL
        div#createForm 
          form#pollForm(action='/' method='post')
            h3 Enter your question:
            input#questionInput(type='text' name='question')
            h3 Enter your options (enter each on a new line):
            textarea#optionsInput(rows='5' cols='100' name='options')
            br
            br
            button.btn.btn-primary(type='submit') Submit
            button.btn.btn-default#cancelButton Cancel
        
    
        

  
